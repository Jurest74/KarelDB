import sqlite3

# Conectarse a la base
conn = sqlite3.connect('BasedeDatos.db')
cursor = conn.cursor()


cursor.execute('''
    CREATE TABLE IF NOT EXISTS Robots (
        id INTEGER PRIMARY KEY,
        tipoRobot INTEGER,
        idRobot INTEGER,
        encendido BOOLEAN
    )
''')


cursor.execute('''
    CREATE TABLE IF NOT EXISTS LogEventos (
        id INTEGER PRIMARY KEY,
        timeStamp TEXT,
        idRobot INTEGER,
        avenida INTEGER,
        calle INTEGER,
        sirenas INTEGER
    )
''')


cursor.execute('''
    CREATE TABLE IF NOT EXISTS EstadoPrograma (
        id INTEGER PRIMARY KEY,
        timeStamp TEXT,
        estado INTEGER
    )
''')


conn.commit()
conn.close()
